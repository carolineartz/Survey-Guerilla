<article id="sign-up" class="pure-skin-mine pure-g-r">
<div class="form-head pure-u-1">
  <h1>Login</h1>
</div>

<% if @error %>
  <div class="errors"><%= @login_error %></div>
<% end %>

<form class="pure-u-1 pure-skin-mine pure-form pure-form-aligned" id="sign-in" method="post" action="/sessions">
  <div class="pure-skin-mine pure-control-group">
  <label class="label" for="email">Email</label>
  <input type="email" name="email" placeholder="e.g., me@example.com" value="<%= @email %>">
  </div>
    <div class="pure-skin-mine pure-control-group">
  <label class="label" for="password">Password</label>
  <input type="password" name="password" placeholder="6 or more characters">
  </div>

  <div class="pure-skin-mine pure-controls">
    <button class="pure-skin-mine pure-button" type="submit" value="Log In">I'm Ready!</button>
  </div>
</form>
</article>
